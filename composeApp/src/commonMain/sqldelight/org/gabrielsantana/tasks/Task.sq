CREATE TABLE Task (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    title TEXT NOT NULL,
    description TEXT NOT NULL,
    isChecked INTEGER NOT NULL
);

insert:
INSERT OR REPLACE INTO Task(id, title, description, isChecked)
VALUES(?,?,?,?);

getAll:
SELECT * FROM Task;

