delete:
DELETE FROM TaskEntity
WHERE uuid IS :uuid;

updateIsChecked:
UPDATE TaskEntity
SET isCompleted = :isCompleted
WHERE uuid IS :uuid;

updateTitleAndDescription:
UPDATE TaskEntity
SET title = :title, description = :description
WHERE uuid IS :uuid;